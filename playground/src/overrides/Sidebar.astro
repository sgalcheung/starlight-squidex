---
import Default from "@astrojs/starlight/components/Sidebar.astro";
import { routes } from "../routing";

const { column } = Astro.locals;
const data = column?.data;
---

{
  data && (
    <a
      class="no-underline focus:no-underline"
      href={routes.intro(data.slug.iv)}
    >
      <div class="px-2 pb-4 mb-6 border-b-[0.5px] border-solid border-b-[#eff0f2] dark:border-b-[#3b3b3b]">
        <div class="flex flex-col flex-auto">
          <div class="text-2xl leading-[31px] text-[#404040] dark:text-white hover:text-blue-700 dark:hover:text-blue-500 focus:text-blue-700 dark:focus:text-blue-500 font-medium antialiased truncate">
            {data.title.iv}
          </div>
        </div>
      </div>
    </a>
  )
}

<Default />
