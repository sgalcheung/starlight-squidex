{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@9.7.1",
	"engines": {
		"node": ">=18.19.0"
	},
	"scripts": {
		"starsquid:dev": "pnpm --filter starsquid dev",
		"starsquid:test": "pnpm --filter starsquid test",
		"playground:dev": "pnpm --filter playground dev",
		"playground:build": "pnpm --filter starsquid build && pnpm --filter playground build",
		"changeset": "changeset",
		"release": "node scripts/release.mjs",
		"check": "biome lint --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.10",
		"esbuild": "^0.25.2",
		"run-scripts": "workspace:*",
		"typescript": "^5.5.4",
		"vite": "^6.3.5",
		"vitest": "^3.1.3"
	}
}
